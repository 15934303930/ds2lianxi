<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.fanmeihua.ds2yuekaolianxi.detail.view.DetailActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/xq" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/xq_sdv"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/xq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/xq_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#f6c917"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/xq_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xq_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/xq_add"
            android:layout_alignBottom="@+id/xq_add"
            android:layout_toLeftOf="@+id/xq_add"
            android:layout_toStartOf="@+id/xq_add" />

        <Button
            android:id="@+id/xq_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f1bf1c"
            android:text="加入购物车"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/xq_buy"
            android:layout_toStartOf="@+id/xq_buy" />

        <Button
            android:id="@+id/xq_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f11c1c"
            android:text="立即购买"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
